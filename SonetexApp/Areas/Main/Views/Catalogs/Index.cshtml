@model MainCatalogVM

<div class="rbt-list-style-area bg-color-white rbt-section-gap">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class=" title-wrapper">
                    <h1 class="title mb--0">@Localizer["all_categories"]</h1>
                </div>
                <p class="description">@Localizer["category_list_description"]</p>
            </div>
        </div>

        <br />
        <div class="row" style="text-align:center;">
            <div class="items-center">
                <a asp-action="Index" asp-controller="Catalogs" asp-route-firstLetter="">
                    @Localizer["select_all"]
                </a>

                @foreach (var firstLetter in Model.FirstLetters)
                {
                    <span>*</span>
                    <a asp-action="Index" asp-controller="Catalogs" asp-route-firstLetter="@firstLetter">
                        @firstLetter
                    </a>
                }
            </div>
        </div>
        <br />

        <div class="row g-5">
            <div class="col-lg-4">
                @foreach (var catalog in Model.Catalogs)
                {
                    if (Model.Catalogs.IndexOf(catalog) % 3 == 0)
                    {
                        <a asp-action="Details" asp-controller="Catalogs" asp-route-id="@catalog.Id">
                            <p class="b3" style="height:50px;">
                                @catalog.Name
                            </p>
                        </a>
                    }
                }
            </div>
            <div class="col-lg-4">
                @foreach (var catalog in Model.Catalogs)
                {
                    if (Model.Catalogs.IndexOf(catalog) % 3 == 1)
                    {
                        <a asp-action="Details" asp-controller="Catalogs" asp-route-id="@catalog.Id">
                            <p class="b3" style="height:50px;">
                                @catalog.Name
                            </p>
                        </a>
                    }
                }
            </div>
            <div class="col-lg-4">
                @foreach (var catalog in Model.Catalogs)
                {
                    if (Model.Catalogs.IndexOf(catalog) % 3 == 2)
                    {
                        <a asp-action="Details" asp-controller="Catalogs" asp-route-id="@catalog.Id">
                            <p class="b3" style="height:50px;">
                                @catalog.Name
                            </p>
                        </a>
                    }
                }
            </div>
        </div>
    </div>
</div>