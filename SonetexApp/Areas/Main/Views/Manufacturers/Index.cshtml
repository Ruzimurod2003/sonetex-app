@model MainManufacturerVM
<div class="rbt-team-area bg-color-white rbt-section-gapBottom">
    <div class="container">
        <div class="row g-5">
            <div class="col-lg-12 mb--60">
                <div class="section-title text-center">
                    <h2 class="title">@Localizer["our_manufacturers"]</h2>
                    <p class="description mt--20">
                        @Localizer["our_manufacturer_description"]
                    </p>
                </div>
            </div>
        </div>
        <div class="row g-5">
            @foreach (var manufacturer in Model.Manufacturers)
            {
                <!-- Start Single Team  -->
                <div class="col-lg-4 col-md-6 col-12">
                    <div class="rbt-team team-style-default style-three rbt-hover">
                        <div class="inner">
                            <a asp-action="Details" asp-route-id="@manufacturer.Id">
                                <div class="thumbnail">
                                    <img src="~/files/@manufacturer.Image.Name">
                                </div>
                                <div class="content">
                                    <div class="title-wrapper">
                                        <p class="rbt-badge-2">
                                            @manufacturer.Catalogs.Count @Localizer["catalogs_cout_of"]
                                        </p>
                                    </div>
                                    <h2 class="title">@manufacturer.Name</h2>
                                    <h6 class="subtitle theme-gradient">@manufacturer.Description</h6>
                                </div>
                            </a>
                        </div>
                    </div>
                </div>
                <!-- End Single Team  -->
            }
        </div>
    </div>
</div>