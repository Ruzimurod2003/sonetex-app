@model Resource

<div class="text-center">
    <h1>create_category</h1>
</div>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Key" class="control-label"></label>
                <input asp-for="Key" class="form-input" />
                <span asp-validation-for="Key" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Value" class="control-label"></label>
                <input asp-for="Value" class="form-input" />
                <span asp-validation-for="Value" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CultureId" class="control-label"></label>
                <select asp-for="CultureId" class="form-input" asp-items="ViewBag.CultureId"></select>
            </div>
            <div class="form-group flex">
                <input type="submit" value="create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-success gap-2">
                    back_to_list
                </a>
            </div>
        </form>
    </div>
</div>