@model AdministratorCertificateVM

<div class="text-center">
    <h1>@Localizer["edit_certificate"]</h1>
</div>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Certificate.Id" />
            <div class="form-group">
                <label asp-for="Certificate.Name" class="control-label">@Localizer["name"]</label>
                <input asp-for="Certificate.Name" class="form-input" />
                <span asp-validation-for="Certificate.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Certificate.NameRussian" class="control-label">@Localizer["name_russian"]</label>
                <input asp-for="Certificate.NameRussian" class="form-input" />
                <span asp-validation-for="Certificate.NameRussian" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Certificate.NameEnglish" class="control-label">@Localizer["name_english"]</label>
                <input asp-for="Certificate.NameEnglish" class="form-input" />
                <span asp-validation-for="Certificate.NameEnglish" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Certificate.NameUzbek" class="control-label">@Localizer["name_uzbek"]</label>
                <input asp-for="Certificate.NameUzbek" class="form-input" />
                <span asp-validation-for="Certificate.NameUzbek" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Certificate.Description" class="control-label">@Localizer["description"]</label>
                <input asp-for="Certificate.Description" class="form-input" />
                <span asp-validation-for="Certificate.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="File" class="control-label">@Localizer["upload_file"]</label>
                <input asp-for="File" class="form-input" type="file" />
                <span asp-validation-for="File" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FileCaption" class="control-label">@Localizer["file_caption"]</label>
                <input asp-for="FileCaption" class="form-input" />
                <span asp-validation-for="FileCaption" class="text-danger"></span>
            </div>
            <div class="form-group flex">
                <input type="submit" value="@Localizer["save"]" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-success gap-2">
                    @Localizer["back_to_list"]
                </a>
            </div>
        </form>
    </div>
</div>
