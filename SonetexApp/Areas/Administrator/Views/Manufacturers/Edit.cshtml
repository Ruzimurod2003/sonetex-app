@model AdministratorManufacturerVM

<div class="text-center">
    <h1>edit_manufacturer</h1>
</div>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Manufacturer.Id" />
            <div class="form-group">
                <label asp-for="Manufacturer.Name" class="control-label">name</label>
                <input asp-for="Manufacturer.Name" class="form-input" />
                <span asp-validation-for="Manufacturer.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Manufacturer.NameRussian" class="control-label">name_russian</label>
                <input asp-for="Manufacturer.NameRussian" class="form-input" />
                <span asp-validation-for="Manufacturer.NameRussian" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Manufacturer.NameEnglish" class="control-label">name_english</label>
                <input asp-for="Manufacturer.NameEnglish" class="form-input" />
                <span asp-validation-for="Manufacturer.NameEnglish" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Manufacturer.NameUzbek" class="control-label">name_uzbek</label>
                <input asp-for="Manufacturer.NameUzbek" class="form-input" />
                <span asp-validation-for="Manufacturer.NameUzbek" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Manufacturer.Description" class="control-label">description</label>
                <input asp-for="Manufacturer.Description" class="form-input" />
                <span asp-validation-for="Manufacturer.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="File" class="control-label">upload_file</label>
                <input asp-for="File" class="form-input" type="file" />
                <span asp-validation-for="File" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FileCaption" class="control-label">file_caption</label>
                <input asp-for="FileCaption" class="form-input" />
                <span asp-validation-for="FileCaption" class="text-danger"></span>
            </div>
            <div class="form-group flex">
                <input type="submit" value="create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-success gap-2">
                    back_to_list
                </a>
            </div>
        </form>
    </div>
</div>
